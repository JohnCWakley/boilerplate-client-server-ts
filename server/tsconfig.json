{
    "compilerOptions": {
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "resolveJsonModule": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "target": "es2020"
    },
    "include": [
        "./src/**/*.ts*"
    ],
    "exclude": [
        "node_modules"
    ]
}